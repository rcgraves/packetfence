            [% FOREACH i IN interfaces.keys.sort %]
            <tr>
              <td>[% interfaces.$i.name %][% IF interfaces.$i.vlan %] <span class="badge">vlan [% interfaces.$i.vlan %]</span>[% END %]</td>
              <td>[% interfaces.$i.ipaddress %]</td>
              <td>[% interfaces.$i.netmask %]</td>
              <td>[% IF interfaces.$i.running %]<a class="btn btn-mini btn-success btn-toggle" toggle-hover="Disable" toggle-hover-else="Enable" toggle-value="Disabled" toggle-value-else="Enabled" interface="[% i %]" toggle-href="#down" href="#up">Enabled</a>[% ELSE %]<a class="btn btn-mini btn-toggle" toggle-hover="Enable" toggle-hover-else="Disable" toggle-value="Enabled" toggle-value-else="Disabled" interface="[% i %]" toggle-href="#up" href="#down">Disabled</a>[% END %]</td>
              <td class="control-group">
                <select class="span2" name="type" interface="[% i %]">
                  <option value="none">None</option>
                  <option value="management" selected="">Management</option>
                  <option value="registration">Registration</option>
                  <option value="isolation">Isolation</option>
                  <option value="inline">Inline</option>
                </select>
              </td>
              <td>
                [% IF interfaces.$i.vlan %]
                <a class="btn btn-mini[% UNLESS interfaces.$i.running %] disabled[% END %]" data-toggle="modal" interface="[% i %]" href="#modalEditInterface">Edit</a>
                <a class="btn btn-mini btn-danger" data-toggle="modal" interface="[% i %]" href="#modalDeleteVlan">Delete</a>
                [% ELSE %]
                <a class="btn btn-mini[% UNLESS interfaces.$i.running %] disabled[% END %]" data-toggle="modal" interface="[% i %]" href="#modalEditInterface">Edit</a>
                <a class="btn btn-mini" data-toggle="modal" interface="[% i %]" href="#modalCreateVlan">Add VLAN</a>
                [% END %]
              </td>
            </tr>
            [% END %]
